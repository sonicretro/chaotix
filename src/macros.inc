; -------------------------------------------------------------------------
; Align
; -------------------------------------------------------------------------
; PARAMETERS:
;	bound - Size boundary
;	value - Value to pad with (optional)
; -------------------------------------------------------------------------

ALIGN macro bound, value
	local	pad
	pad: = ((\bound)-((*)%(\bound)))%(\bound)
	if narg>1
		dcb.b	pad,\value
	else
		dcb.b	pad,0
	endif
	endm

; -------------------------------------------------------------------------
; Pad RS to even address
; -------------------------------------------------------------------------

RS_EVEN macro
	rs.b	__rs&1
	endm

